{
  "compilerOptions": {

    "target": "ES2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/tests/*":["../tests/*"],
      "@/*": ["*"]
    },
    "strict": true
  }
}